<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffae4">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e5deb0"
        android:layout_margin="20dp"

        >
        <TextView
            android:id="@+id/arthritis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arthritis"
            android:textColor="#004a4a"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/arthritis"
            android:src="@drawable/arthritis1"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/arthritis_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arthritis"
            android:layout_below="@id/image"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/arthritis_symptoms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptoms:-"
            android:textColor="#d63100"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_below="@id/arthritis_text"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/arthritis_symptoms1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/arthritis_symptoms"
            android:layout_below="@id/arthritis_symptoms"
            android:layout_toRightOf="@id/arthritis_symptoms1"

            />

    </RelativeLayout>
</LinearLayout>