<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffae4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e5deb0"
        android:layout_margin="20dp"

        >
        <TextView
            android:id="@+id/piles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Piles"
            android:textColor="#004a4a"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/piles"
            android:src="@drawable/piles11"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/piles_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/piles"
            android:layout_below="@id/image"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/piles_symptoms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptoms:-"
            android:textColor="#d63100"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_below="@id/piles_text"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/piles_symptoms1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/piles_symptoms"
            android:layout_below="@id/piles_symptoms"
            android:layout_toRightOf="@id/piles_symptoms1"

            />
        <TextView
            android:id="@+id/piles_treatments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treatments :-"
            android:textColor="#d63100"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_below="@id/piles_symptoms1"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/piles_treatments1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/piles_treatments"
            android:layout_below="@id/piles_treatments"
            android:layout_toRightOf="@id/piles_treatments1"

            />
    </RelativeLayout>

</LinearLayout>