<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffae4">

 <LinearLayout
     android:id="@+id/ll"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentTop="true"
     android:layout_centerHorizontal="true"
     android:background="@drawable/border">

  <fragment
      android:id="@+id/map"
      android:name="com.google.android.gms.maps.SupportMapFragment"
      android:layout_width="match_parent"
      android:layout_height="160dp"

      tools:context="com.k.amulyacare.ContactUs" />
 </LinearLayout>
   <TextView
       android:id="@+id/contact_details"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="CONTACT DETAILS"
       android:textSize="25sp"
       android:textStyle="normal"
       android:textColor="#000000"
       android:layout_below="@id/ll"
       android:layout_margin="10dp"/>
    <ImageView
        android:id="@+id/address_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/adress"
        android:layout_below="@id/contact_details"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_details"
        android:layout_toRightOf="@id/address_image"
        android:layout_marginLeft="15dp"
        android:paddingTop="10dp"
        android:text="11-914 Aravinda Nagar,\n Sharada Nagar, \nAnantapuram."/>
    <ImageView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_image"
        android:src="@drawable/mail"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/mail_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amulya@somemail.com"
        android:layout_below="@id/address"
        android:layout_toRightOf="@id/mail"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"/>
    <ImageView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mail"
        android:src="@drawable/phone"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08554-221110,9440785957"
        android:layout_below="@id/mail_id"
        android:layout_toRightOf="@id/phone"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"/>
 <TextView
     android:id="@+id/timimg_details"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="WORKING HOURS"
     android:textSize="25sp"
     android:textStyle="normal"
     android:textColor="#000000"
     android:layout_below="@id/phone_number"
     android:layout_margin="10dp"/>
 <TextView
    android:id="@+id/days"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Mon - Fri :"
    android:textStyle="italic"
    android:layout_below="@id/timimg_details"
    android:textSize="20dp"
    android:layout_marginLeft="10dp"/>
 <TextView
     android:id="@+id/days_time"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="8am - 6pm"
     android:textStyle="italic"
     android:layout_below="@id/timimg_details"
     android:layout_toRightOf="@id/days"
     android:textSize="20dp"
     android:textColor="#8a2626"
     android:layout_marginLeft="10dp"/>
 <TextView
     android:id="@+id/days1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Sat - Sunday : "
     android:textStyle="italic"
     android:layout_below="@id/days"
     android:textSize="20dp"
     android:layout_marginLeft="10dp"/>
 <TextView
     android:id="@+id/days1_time"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="8am - 10pm"
     android:textStyle="italic"
     android:layout_below="@id/days"
     android:layout_toRightOf="@id/days1"
     android:textSize="20dp"
     android:textColor="#8a2626"
     android:layout_marginLeft="10dp"/>
 <FrameLayout
     android:id="@+id/online_consultation"
     android:layout_width="260dp"
     android:layout_height="80dp"
     android:background="@drawable/calender1"
     android:layout_below="@id/days1"
     android:layout_margin="10dp"
     >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
  <ImageView
      android:id="@+id/cal"
     android:layout_width="90dp"
     android:layout_height="75dp"
     android:background="@drawable/calender"
     />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Online\n Consultation"
      android:layout_toRightOf="@id/cal"
      android:textSize="25sp"
      android:textColor="#000000"
      android:textStyle="italic"
      android:padding="10dp"
      />
  </RelativeLayout>
 </FrameLayout>

 <TextView
     android:id="@+id/enquairy_details"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="ENQUIRY"
     android:textSize="25sp"
     android:textStyle="normal"
     android:textColor="#000000"
     android:layout_below="@id/online_consultation"
     android:layout_margin="10dp"/>
 <EditText
     android:id="@+id/enquairy_name"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/enquairy_details"
     android:layout_marginLeft="10dp"
     android:layout_marginRight="10dp"
     android:hint="Name"/>
 <EditText
     android:id="@+id/enquairy_email"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/enquairy_name"
     android:layout_margin="10dp"
     android:hint="Email"/>
 <EditText
     android:id="@+id/enquairy_message"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/enquairy_email"
     android:layout_marginLeft="10dp"
     android:layout_marginRight="10dp"
     android:inputType="text"
     android:lines="5"
     android:hint="Message"/>
 <Button
     android:id="@+id/enquairy_button"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="MESSAGE"
     android:background="#634e37"
     android:layout_below="@id/enquairy_message"
     android:layout_alignParentEnd="true"
     android:layout_marginRight="10dp"
      />




</RelativeLayout>
</ScrollView>