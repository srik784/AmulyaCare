<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fffae4">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5deb0"
    android:layout_margin="20dp"

    >
    <TextView
        android:id="@+id/obesity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obesity"
        android:textColor="#004a4a"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/obesity"
        android:src="@drawable/obesity1"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/obesity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/obesity"
        android:layout_below="@id/image"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/obesity_treatments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Treatments :-"
        android:textColor="#d63100"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_below="@id/obesity_text"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/obesity_treatments1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/obesity_treatments"
        android:layout_below="@id/obesity_treatments"
        android:layout_toRightOf="@id/obesity_treatments1"

        />
</RelativeLayout>
</LinearLayout>